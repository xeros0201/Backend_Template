{
  "compileOnSave": false,
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "es2017",
      "esnext.asynciterable",
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
     
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
   
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@controllers/*": [
        "mvc/controllers"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@mvc/*": [
        "mvc/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@models/*": [
        "mvc/models"
      ],
   
      "@routes/*": [
        "mvc/routes/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@init/*": [
        "init/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist", 
  ],
  "include": [
    "./src",
  
],
}